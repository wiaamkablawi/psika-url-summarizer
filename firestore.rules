rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // All writes in this project are performed by Cloud Functions (Admin SDK),
    // which bypasses security rules. Client SDK access is blocked by default.
    match /summaries/{summaryId} {
      allow read, write: if false;
    }

    // Deny every other collection/document path unless explicitly opened later.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
